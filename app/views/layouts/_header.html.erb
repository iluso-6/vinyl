
<header class="navbar navbar-fixed-top navbar-inverse metal_header">
  <div class="container">
    <h4 id="logo">Good Vibrations Vinyl</h4>
    <nav>
        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home",   catalog_path %></li>
            <li><%= link_to "Browse", categories_path %></li>
            <li><%= link_to "Search", search_path %></li>
            
            <li><%= link_to "Shopping Cart", cart_path %></li>

        <% if user_signed_in? %>
        
           <% if session[:cart] then %>
             <div class="image_header"><%= link_to image_tag("cart_icon.png", alt:"cart Image"), cart_path %></div>
           <% end %>
           
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_user.username %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <li><%= link_to 'New Item', new_item_path %></li>
              <li><%= link_to 'New Category', new_category_path %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
 </div>
</header>