<h2><%= @item.artist %></h2>

<div class="jumbotron">
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-block">

      <img class="img-thumbnail" alt="Card image cap" src = <%= @item.avatar_url  %> >
      </div>
    </div>
  </div>
  <div class="col-sm-6">
      <table class="table table-striped table-responsive">
    <thead>
      <tr>
        <th>Artist</th>
        <th>Title</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @item.artist %></td>
        <td><%= @item.title %></td>
      </tr>
      </tbody>
      <thead>
      <tr>
        <th>Year</th>
        <th>Label</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= @item.year %></td>
        <td><%= @item.label %></td>
      </tr>
      
   </br>
    </tbody>
          <thead>
      <tr>
        <th>Genre</th>
        <th>Price</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= @item.genre %></td>
        <td><%= @item.price %></td>
      </tr>
      
   </br>
    </tbody>
   </table>
    </br>   </br>
    <div class="track">
    <h4>Sample Track</h4>
          <audio controls>
            <source src= <%=  @item.song  %> >
          </audio>

   </br>   </br>

  

       
        <% if current_user && @item.owner == current_user.email %>
            <button class="btn btn-success btn-sm" ><%= link_to 'Edit', edit_item_path(@item) %></button>
        <% elsif current_user %>
            <button class="btn btn-default btn-sm"><a href="/cart/<%= @item.id %>">Add to Cart</a></button>
        <% end %>
        
         <button class="btn btn-primary btn-sm" style="margin-left:5em"><%= link_to 'Back', :back %></button>
</div>
  </div>
</div>
</div>
